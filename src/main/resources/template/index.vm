    <script>
        function goToTargetPage(tarVal) {
            if (tarVal == 1) location.href = '/user';
            if (tarVal == 2) location.href = '/exam';
            if (tarVal == 3) location.href = '/paper';
            if (tarVal == 4) location.href = '/rank';
